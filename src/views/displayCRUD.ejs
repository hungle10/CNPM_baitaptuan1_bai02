<div class="container">
  <div class="row">
    <div class="col-12">
      <h3>Users</h3>
      <p><a href="/crud">Create new user</a></p>
      <% if (dataTable && dataTable.length) { %>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Email</th>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Phone</th>
              <th>Address</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% dataTable.forEach(function(u) { %>
              <tr>
                <td><%= u.email %></td>
                <td><%= u.firstName %></td>
                <td><%= u.lastName %></td>
                <td><%= u.phonenumber || '' %></td>
                <td><%= u.address || '' %></td>
                <td>
                  <a href="/edit-crud?id=<%= u.id %>">Edit</a> |
                  <a href="/delete-crud?id=<%= u.id %>" onclick="return confirm('Delete user?')">Delete</a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } else { %>
        <p>No users found.</p>
      <% } %>
    </div>
  </div>
</div>